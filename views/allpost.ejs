<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/allpost.css">
</head>
<body>
    <div id="main">
        <div id="b1">
            <h1>All POSTS</h1>
            <div class="btn">
                <a href="/profile">BACK TO PROFILE</a>
            </div>
        </div>
        <% foundpost.forEach(function(posts){ %>
            <div id="postbox">
              <h1><%= posts.post %></h1>
              <h2><%= posts.likes.length %> Likes</h2>
              <a href="/likes/<%= posts._id %>"> <%= `${(posts.likes.indexOf(data._id)=== -1)?"Like":"DisLike"}`%></a>
              <div id="commentbox">
                <% posts.comments.forEach(function(c){ %>
                <div class="commentlist">
                <h2><%= c.name %></h2> <h3> <%= c.comment %></h3>
                 
                </div>
                <%   }) %> 
              </div>
              <form action="/comment/<%=  posts._id  %>" method="post">
              <input class="input" name="comment" placeholder="Leave a comment here !" type="text">
              <button type="submit" class="commentbtn"  value=" Comment">Comment</button>
            </form>
            </div>
            <% }) %>
    </div>

    
</body>
<script src="/javascripts/allpost.js"></script>
</html>